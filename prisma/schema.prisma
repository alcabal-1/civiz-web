// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  points        Int       @default(100)
  pointsFromVisions Int   @default(0)
  pointsFromLikes   Int   @default(0)
  pointsFromFunding Int   @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  visions       Vision[]
  likes         Like[]
  
  @@index([email])
}

model Vision {
  id            String    @id @default(cuid())
  promptText    String
  imageUrl      String
  category      String
  categoryId    String
  likes         Int       @default(0)
  trending      Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  likedBy       Like[]
  
  @@index([userId])
  @@index([createdAt])
  @@index([likes])
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  visionId  String
  vision    Vision   @relation(fields: [visionId], references: [id], onDelete: Cascade)
  
  @@unique([userId, visionId])
  @@index([userId])
  @@index([visionId])
}

model WaitingList {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  
  @@index([email])
}